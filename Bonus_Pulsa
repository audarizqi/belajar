			System.out.println("Nomor pengisian                : "+NP);
			System.out.println("Harga pembelian               : Rp. "+HP+",-");
			PD=HP/PD;
			if(PD>=10000){
				J=PD;
				System.out.println("Jumlah pembelian      :Rp. "+PD+",-");
				
			}else if(PD>=15000){
				J=PD/2;
				System.out.println("Jumlah pembelian      : Rp."+PD+",-");
				
			}else if(PD>=20000){
				J=PD/2;
				System.out.println("Jumlah pembelian      : Rp."+PD+",-");
				
			}else if(PD>=25000){
				J=PD/2;
				System.out.println("Jumlah pembelian    : Rp."+PD+",-");
				
			}else if(PD>=30000){
				J=PD/2;
				System.out.println("Jumlah pembelian    :Rp. "+PD+",-");
				
			}else if(PD>=35000){
				J=PD/2;
				System.out.println("Jumlah pembelian    : Rp."+PD+",-");
				
			}else if(PD>=40000){
				J=PD/2;
				System.out.println("Jumlah pembelian    :Rp. "+PD+",-");
				
			}else if(PD>=45000){
				J=PD/2;
