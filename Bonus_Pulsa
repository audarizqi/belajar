			}else if(PD>=50000){
				J=PD/2;
				System.out.println("Jumlah pembelian    : Rp."+PD+",-");
				
			}else if(PD>=55000){
				J=PD/2;
				System.out.println("Jumlah pembelian    : Rp."+PD+",-");
				
			}else{
			System.out.println("Selamat anda mendapatkan Bonus Sebesar      : Rp."+PD/Bagi+",-");}
