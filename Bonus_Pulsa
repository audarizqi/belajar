import java.util.*;

public class Bonus_Pulsa {
	public static void main (String[] args) {
		final double Bagi=2;
		Scanner Q = new Scanner (System.in) ;
		System.out.println();
		System.out.println();
		double J;
		try{
			System.out.println("=====================================");
			System.out.println("              AUD Cell");
			System.out.println("=====================================");
			System.out.print("Nama pembeli              : ");
			String NA=Q.nextLine();
			System.out.print("Nomor pengisian           : ");
